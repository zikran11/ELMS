<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="5dp">

    <TextView
        android:id="@+id/show_name"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:gravity="center"
        android:textColor="@color/purple_500"/>
    <TextView
        android:id="@+id/show_reason"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:layout_toRightOf="@id/show_name"
        android:gravity="center"
        android:textColor="@color/purple_700"/>
    <TextView
        android:id="@+id/show_leaves"
        android:layout_width="30dp"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/show_reason"
        android:padding="5dp"
        android:textColor="@color/purple_700"/>

    <Button
        android:id="@+id/accept"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginLeft="5dp"
        android:layout_toRightOf="@id/show_leaves"
        android:background="@drawable/icon_check"/>
    <Button
        android:id="@+id/reject"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_toRightOf="@id/accept"
        android:layout_marginLeft="3dp"
        android:background="@drawable/icon_clear"/>

</RelativeLayout>